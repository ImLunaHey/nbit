{
  "name": "@nbit/node",
  "version": "0.1.0",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "src/index.ts",
  "scripts": {
    "lint": "eslint --max-warnings 0 \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "jest": "jest --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest",
    "clean": "rm -rf .turbo lib coverage",
    "build": "rm -rf lib && rollup -c && tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "eslint": "^8.19.0",
    "eslint-config-xt": "^1.7.0",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "rollup": "^2.76.0",
    "rollup-plugin-prettier": "^2.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": "xt",
    "rules": {
      "@typescript-eslint/consistent-type-imports": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "license": "ISC"
}
