{
  "name": "@nbit/bun",
  "version": "0.8.0",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": "eslint --max-warnings 0 src",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "unit": "BUN_ENV=test bun wiptest",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn unit",
    "clean": "rm -rf .turbo build coverage",
    "copy-files": "cp ../../README.md build/ && lean-package > build/package.json",
    "build": "rm -rf build && tsc -p tsconfig.build.json && rollup -c && rm -rf build/dts && yarn copy-files && prettier --write build",
    "build:watch": "rollup -wc",
    "dev": "nodemon --exec bun src/example.ts -e js,ts,json --watch src --watch --watch ../core/src",
    "version": "yarn version"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "bun-types": "^0.7.1",
    "eslint": "^8.19.0",
    "eslint-config-xt": "^1.7.0",
    "expect-type": "^0.13.0",
    "lean-package": "^1.4.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rollup": "^2.76.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-dts": "^4.2.2",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "extends": "xt",
    "rules": {
      "@typescript-eslint/consistent-type-imports": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "license": "ISC"
}
