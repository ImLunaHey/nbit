{
  "name": "@nbit/bun",
  "version": "0.3.0",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": "eslint --max-warnings 0 \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "jest": "jest --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest",
    "clean": "rm -rf .turbo build coverage",
    "copy-files": "cp README.md build/ && lean-package > build/package.json",
    "build": "rm -rf build && tsc -p tsconfig.build.json && rollup -c && rm -rf build/dts && yarn copy-files && prettier --write build",
    "build:watch": "rollup -wc",
    "version": "yarn version"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/jest": "^28.1.4",
    "bun-types": "^0.1.4",
    "eslint": "^8.19.0",
    "eslint-config-xt": "^1.7.0",
    "jest": "^28.1.2",
    "lean-package": "^1.4.0",
    "prettier": "^2.7.1",
    "rollup": "^2.76.0",
    "rollup-plugin-dts": "^4.2.2",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": "xt",
    "rules": {
      "@typescript-eslint/consistent-type-imports": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "license": "ISC"
}
