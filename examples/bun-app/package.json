{
  "name": "bun-app",
  "version": "0.1.0",
  "scripts": {
    "dev": "nodemon --exec \"bun\" src/server.ts -e js,ts,json --watch src --watch ../../packages/bun/src --watch ../../packages/core/src",
    "lint": "eslint --max-warnings 0 \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test": "yarn lint && yarn typecheck && yarn format:check",
    "clean": "rm -rf .turbo coverage"
  },
  "dependencies": {},
  "devDependencies": {
    "bun-types": "^0.1.4",
    "eslint": "^8.19.0",
    "eslint-config-xt": "^1.7.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "extends": "xt",
    "rules": {
      "@typescript-eslint/consistent-type-imports": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "license": "ISC"
}
