{
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "turbo run --force lint",
    "typecheck": "turbo run --force typecheck",
    "format:check": "turbo run --force format:check",
    "jest": "turbo run --force jest",
    "test": "turbo run --force lint typecheck format:check jest",
    "clean": "rm -rf node_modules/.cache && yarn workspaces run clean",
    "build": "turbo run build"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "^1.3.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "license": "ISC",
  "private": true
}
